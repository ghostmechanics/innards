{
  "name": "innards",
  "version": "0.2.0",
  "description": "Bones and guts for a site",
  "repository": "ghostmechanics/innards",
  "main": "server.js",
  "bugs": {
    "url": "https://github.com/ghostmechanics/innards/issues"
  },
  "keywords": [
    "hapi.js",
    "node",
    "starter-kit",
    "pug",
    "stylus"
  ],
  "dependencies": {
    "blankie": "2.1.0",
    "concurrently": "3.5.0",
    "glue": "4.1.0",
    "hapi": "16.4.3",
    "hapi-pino": "1.7.0",
    "inert": "4.2.0",
    "normalize-styl": "4.1.1",
    "scooter": "4.0.0",
    "vision": "4.1.1"
  },
  "devDependencies": {
    "devtool": "2.3.1",
    "eslint": "4.2.0",
    "eslint-config-innards": "1.1.0",
    "jeet": "7.1.0",
    "nib": "1.1.2",
    "pug": "2.0.0-rc.2",
    "rimraf": "2.6.1",
    "rupture": "0.6.2",
    "shrinkydink": "1.0.1",
    "stylus": "0.54.5",
    "webpack": "3.1.0"
  },
  "engines": {
    "node": ">= 4.7.0 < 9",
    "npm": ">= 5"
  },
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "stylus -c -u ./node_modules/nib -u ./node_modules/jeet -u ./node_modules/rupture css/styles.styl",
    "build-js": "webpack --progress --watch",
    "clean": "./node_modules/.bin/rimraf dist",
    "debug": "./node_modules/.bin/devtool server.js",
    "lint": "./node_modules/.bin/eslint ./js ./hooks --cache",
    "rebuild": "npm run clean && npm run build",
    "shrink": "npm shrinkwrap && ./node_modules/.bin/shrinkydink",
    "start": "node ./server.js",
    "start-build": "./node_modules/.bin/concurrently -p --kill-others-on-fail '[{name}]' -n 'START, BUILD' 'npm start' 'npm run build' -c 'bgBlue.bold,bgGreen.bold'"
  },
  "author": {
    "name": "John Michel",
    "email": "johnmichel@gmail.com"
  },
  "license": "MIT"
}
